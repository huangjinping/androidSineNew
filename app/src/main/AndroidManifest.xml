        <activity android:name=".ui.main.activity.MainActivity"></activity>
        <activity android:name=".ui.main.activity.NewsDetailsActivity"></activity>
        <activity android:name=".ui.main.activity.NewsDetailsActivity1"></activity>
        <activity android:name=".ui.main.activity.NewsPhotoDetailActivity"></activity>
        <activity android:name=".ui.my.activity.PhoneLoginActivity"></activity>
        <activity android:name=".ui.main.activity.SearchNewsActivity"></activity>
        <activity android:name=".ui.main.activity.EditActivity"></activity>
        <activity android:name=".ui.commodity.CommodityActivity"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"
