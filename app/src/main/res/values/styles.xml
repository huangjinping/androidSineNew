<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppActionbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="line">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray_background</item>
        <item name="android:layout_height">0.3dp</item>
    </style>

    <style name="input_comm">
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/gray_background</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="layout_bottom_line">
        <item name="android:background">@drawable/shape_bottm_line</item>
    </style>



    <style name="blackTextStyle">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="colorPrimaryTextStyle">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="whiteTextStyleTitle">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="greyTextStyleSmall">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/grey_text_color_normal</item>
    </style>
    <!--normal白色文本-->
    <style name="whiteTextStyle">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="blackTextStyleSmall">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="greyTextStyleSmaller">
        <item name="android:textSize">@dimen/font_smaller</item>
        <item name="android:textColor">@color/grey_text_color_normal</item>
    </style>
    <style name="colorPrimaryTextStyleSmall">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
