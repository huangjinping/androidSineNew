<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">

    <com.jaydenxiao.common.commonwidget.NormalTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.jaydenxiao.common.commonwidget.NormalTitleBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="收货人"
            android:textColor="@color/black"
            />
        <EditText
            style="@style/input_comm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:hint="宋佳佳"
            />
    </LinearLayout>

    <ImageView
        style="@style/line"
        android:layout_width="match_parent"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="联系电话"
            android:textColor="@color/black"
            />
        <EditText
            style="@style/input_comm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="11"
            android:background="@color/transparent"
            android:hint="1681283123"
            />
    </LinearLayout>

    <ImageView
        style="@style/line"
        android:layout_width="match_parent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="所在地区"
            android:textColor="@color/black"
            />
        <EditText
            style="@style/input_comm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:hint="北京市 朝阳区"
            />
    </LinearLayout>

    <ImageView
        style="@style/line"
        android:layout_width="match_parent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="详细地址"
            android:textColor="@color/black"
            />
        <EditText
            style="@style/input_comm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:background="@color/transparent"
            android:hint="北京市朝阳苏奥术大师大所大所大所多北京市朝阳苏奥术大师大所大所大所多"
            />
    </LinearLayout>

    <ImageView
        style="@style/line"
        android:layout_width="match_parent"
        />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为默认地址"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            />
       
        
        
        <Switch
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>