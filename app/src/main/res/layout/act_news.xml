<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/roov_view"
    android:layout_height="match_parent">
    <com.jaydenxiao.common.commonwidget.NormalTitleBar
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.jaydenxiao.common.commonwidget.NormalTitleBar>


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_content_view"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <com.jaydenxiao.common.view.articlebase.ArticleDetailsViewGroup
            android:id="@+id/articleDetailsViewGroup"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="visible" >
        </com.jaydenxiao.common.view.articlebase.ArticleDetailsViewGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            >
            <include layout="@layout/layout_input_comment"></include>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            ></LinearLayout>
    </LinearLayout>
</LinearLayout>